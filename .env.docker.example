# Docker Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Configuration (Cloud Database)
# Get your connection string from MongoDB Atlas dashboard
DATABASE=mongodb+srv://username:password@cluster.mongodb.net/ecommerce?retryWrites=true&w=majority

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT=your_firebase_service_account_json

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ChromaDB Configuration
# For local development: localhost:8001
# For Docker: chromadb:8000 (auto-configured in docker-compose.yml)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key

# Server Configuration
PORT=8000
NODE_ENV=production
